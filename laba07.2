#include <stdio.h>
#include <stdarg.h>

int sum(int n, ...)
{
  int Sum = 0; 
  int  a = 0, count = 2;
  
  va_list ptr;
  va_start(ptr, n);
  
  for (;n; n--)
  {
    a = va_arg(ptr, int);
    
    if(count%2 == 1)
    {
    a *= a;
    Sum += a;
    count++;
    }
    else 
    {
    a *= a;
    Sum -= a;
    count++;
    }
  }
  
  va_end(ptr);
  
  return Sum;
}

