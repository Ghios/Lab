{
  int Suma1 = 0;
  int Suma2 = 0;
  int Suma3 = 0;

  Suma1 = sum(5,11,41,21,14,22);

  Suma2 = sum(10,23,31,53,12,43,23,26,31,12,14);

  Suma3 = sum(12,11,2,34,4,55,6,67,87,94,13,21,62);

  printf("%d\n", Suma1);
  printf("%d\n", Suma2);
  printf("%d\n", Suma3);
}
